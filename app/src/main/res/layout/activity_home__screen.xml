<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs464.barhop.Home_Screen">
   <include android:id="@+id/toolbar" layout="@layout/toolbar" />

    <Button
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_bar_search"
        android:id="@+id/search"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="399dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_bar_nearby"
        android:id="@+id/nearbyMe"
        android:layout_marginTop="176dp"
        android:layout_alignEnd="@+id/search"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="234dp"
        android:layout_alignTop="@+id/search" />

    <Button
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_bar_favorites"
        android:id="@+id/favorites"
        android:layout_marginBottom="76dp"
        android:layout_alignEnd="@+id/nearbyMe"
        android:layout_alignParentStart="true"
        android:layout_marginTop="165dp"
        android:layout_alignTop="@+id/nearbyMe"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
