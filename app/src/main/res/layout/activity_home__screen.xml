<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs464.barhop.Home_Screen"
    android:background="#CCC">


    <ImageButton
        android:src="@drawable/search"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:text="@string/bottom_bar_search"
        android:id="@+id/search"

        android:background="#33cc33"

        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignEnd="@+id/nearbyMe" />

    <ImageButton

        android:src="@drawable/location1"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:text="@string/bottom_bar_nearby"
        android:textAlignment="textStart"
        android:id="@+id/nearbyMe"
        android:background="#33cc33"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/favi1"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:text="@string/bottom_bar_favorites"
        android:id="@+id/favorites"

        android:background="#33cc33"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:layout_alignStart="@+id/nearbyMe"
        android:layout_alignEnd="@+id/nearbyMe" />

</RelativeLayout>
